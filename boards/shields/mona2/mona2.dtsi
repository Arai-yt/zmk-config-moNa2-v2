#include <dt-bindings/zmk/matrix_transform.h>
#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <physical_layouts.dtsi>
#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "default_layout";

        kscan = <&kscan0>;
        transform = <&default_transform>;

        keys  /*                    w   h    x    y     rot   rx   ry */
            = <&key_physical_attrs 100 100    0    0      0    0    0>
            , <&key_physical_attrs 100 100  100    0      0    0    0>
            , <&key_physical_attrs 100 100  200    0      0    0    0>
            , <&key_physical_attrs 100 100  300    0      0    0    0>
            , <&key_physical_attrs 100 100  400    0      0    0    0>
            , <&key_physical_attrs 100 100  800    0      0    0    0>
            , <&key_physical_attrs 100 100  900    0      0    0    0>
            , <&key_physical_attrs 100 100 1000    0      0    0    0>
            , <&key_physical_attrs 100 100 1100    0      0    0    0>
            , <&key_physical_attrs 100 100 1200    0      0    0    0>
            , <&key_physical_attrs 100 100    0  100      0    0    0>
            , <&key_physical_attrs 100 100  100  100      0    0    0>
            , <&key_physical_attrs 100 100  200  100      0    0    0>
            , <&key_physical_attrs 100 100  300  100      0    0    0>
            , <&key_physical_attrs 100 100  400  100      0    0    0>
            , <&key_physical_attrs 100 100  700  100      0    0    0>
            , <&key_physical_attrs 100 100  800  100      0    0    0>
            , <&key_physical_attrs 100 100  900  100      0    0    0>
            , <&key_physical_attrs 100 100 1000  100      0    0    0>
            , <&key_physical_attrs 100 100 1100  100      0    0    0>
            , <&key_physical_attrs 100 100 1200  100      0    0    0>
            , <&key_physical_attrs 100 100    0  200      0    0    0>
            , <&key_physical_attrs 100 100  100  200      0    0    0>
            , <&key_physical_attrs 100 100  200  200      0    0    0>
            , <&key_physical_attrs 100 100  300  200      0    0    0>
            , <&key_physical_attrs 100 100  400  200      0    0    0>
            , <&key_physical_attrs 100 100  500  200      0    0    0>
            , <&key_physical_attrs 100 100  700  200      0    0    0>
            , <&key_physical_attrs 100 100  800  200      0    0    0>
            , <&key_physical_attrs 100 100  900  200      0    0    0>
            , <&key_physical_attrs 100 100 1000  200      0    0    0>
            , <&key_physical_attrs 100 100 1100  200      0    0    0>
            , <&key_physical_attrs 100 100 1200  200      0    0    0>
            , <&key_physical_attrs 100 100    0  300      0    0    0>
            , <&key_physical_attrs 100 100  100  300      0    0    0>
            , <&key_physical_attrs 100 100  200  300      0    0    0>
            , <&key_physical_attrs 100 100  300  300      0    0    0>
            , <&key_physical_attrs 100 100  400  300      0    0    0>
            , <&key_physical_attrs 100 100  500  300      0    0    0>
            , <&key_physical_attrs 100 100  700  300      0    0    0>
            , <&key_physical_attrs 100 100  800  300      0    0    0>
            , <&key_physical_attrs 100 100 1200  300      0    0    0>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = <4>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)                     RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)             RC(3,6) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)     RC(3,7) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)     RC(3,8) RC(3,9)                         RC(3,10)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        row-gpios = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    /* ---- 入力プロセッサ：方向フリック -> ショートカット ---- */
    dir_gestures: dir_gestures {
        compatible = "mona,dir-gestures";
        threshold = <700>;      /* 600〜900で調整：下げる＝敏感 / 上げる＝鈍く */
        timeout-ms = <200>;     /* 150〜250で調整：短いほど素早い動きだけ */
        bindings-up    = <&kp LG(W)>;      /* 上：Cmd/Win+W（タブ閉じ） */
        bindings-down  = <&kp LG(T)>;      /* 下：Cmd/Win+T（新規タブ） */
        bindings-left  = <&kp LG(LBKT)>;   /* 左：前のタブ/戻る */
        bindings-right = <&kp LG(RBKT)>;   /* 右：次のタブ/進む */
    };

    /* ---- エンコーダ（未使用なら disabled のまま） ---- */
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    right_encoder: encoder_right {
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <10>;
    };
}; /* / */

/* ---------- pinctrl（SPI0 のピン割り当て） ---------- */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            /* 例: SCK=P0.13, MOSI=P0.14, MISO=P0.15（実配線に合わせて変更可） */
            psels = <NRF_PSEL(SPIM_SCK,  0, 13)
                     NRF_PSEL(SPIM_MOSI, 0, 14)
                     NRF_PSEL(SPIM_MISO, 0, 15)>;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  0, 13)
                     NRF_PSEL(SPIM_MOSI, 0, 14)
                     NRF_PSEL(SPIM_MISO, 0, 15)>;
            low-power-enable;
        };
    };
};

/* ---------- PMW3610（SPI0 配下） ---------- */
&spi0 {
    status = "okay";

    /* pinctrl の紐付け */
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";

    /* 例: CS = D10（実配線に合わせて変更） */
    cs-gpios = <&xiao_d 10 GPIO_ACTIVE_LOW>;

    pmw3610_tb: pmw3610@0 {
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&xiao_d 9 GPIO_ACTIVE_LOW>;

        /* 入力イベントの種別と軸コード（必須） */
        evt-type      = <INPUT_EV_REL>;
        x-input-code  = <INPUT_REL_X>;
        y-input-code  = <INPUT_REL_Y>;
        /* wheel-input-code / hwheel-input-code を使うならここに追加 */

        /* センサ解像度（任意） */
        /* cpi = <1600>; */

        status = "okay";
    };
};

/* ---------- 右手（中央）トラックボールの Input Listener ---------- */
&trackball_central_listener {
    compatible = "zmk,input-listener";
    status = "okay";
    device = <&pmw3610_tb>;

    /* 必要に応じて軸補正：X/Y 反転や XY 入替 */
    input-processors = <&zip_xy_transform INPUT_TRANSFORM_X_INVERT>;

    /* レイヤ7（Gesture）の間だけ、方向フリック検出を有効化 */
    gest_dir_only {
        layers = <7>;                         /* keymap の Gesture=7 と一致させる */
        input-processors = <&dir_gestures>;
    };

    /* ※ スクロール変換は衝突を避けるため未適用。
       もし使いたい場合は別レイヤ（例: 6）に限定して有効化する：
       gest_only {
           layers = <6>;
           input-processors = <&zip_xy_to_scroll_mapper>;
       };
    */
}
