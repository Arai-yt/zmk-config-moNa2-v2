&zip_mouse_gesture {
    /* まずはこの初期値から。反応を見て後で調整 */
    stroke-size = <300>;
    movement-threshold = <8>;
    idle-timeout-ms = <250>;
    gesture-cooldown-ms = <120>;
    enable-eager-mode;

    prev_tab {
        pattern = <GESTURE_LEFT>;
        bindings = <&kp LC(LS(TAB))>;
    };

    next_tab {
        pattern = <GESTURE_RIGHT>;
        bindings = <&kp LC(TAB)>;
    };

    new_tab {
        pattern = <GESTURE_UP>;
        bindings = <&kp LC(T)>;
    };

    close_tab {
        pattern = <GESTURE_DOWN>;
        bindings = <&kp LC(W)>;
    };
};
