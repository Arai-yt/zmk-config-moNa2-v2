/ {
  zip_mouse_gesture_l9: zip_mouse_gesture_l9 {
    compatible = "zmk,input-processor-mouse-gesture";
    #input-processor-cells = <0>;  
    enable-eager-mode;
    stroke-size = <5>;
    movement-threshold = <6>;
    idle-timeout-ms = <100>;
    gesture-cooldown-ms = <120>;

    vdesk_send_prev  { pattern = <GESTURE_LEFT>;  bindings = <&kp LG(LC(LS(LEFT)))>;  };
    vdesk_send_next  { pattern = <GESTURE_RIGHT>; bindings = <&kp LG(LC(LS(RIGHT)))>; };
    focus_url        { pattern = <GESTURE_UP>;    bindings = <&kp LC(L)>;             };
    taskbar_next     { pattern = <GESTURE_DOWN>;  bindings = <&kp LG(T)>;             };
  };
};
